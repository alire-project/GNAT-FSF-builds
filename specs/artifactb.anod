from e3.anod.loader import spec
from e3.os.fs import touch
from e3.anod.spec import Anod
import os

class ArtifactB(spec('gh-artifact')):

    @property
    def version(self):
        return "2.0.0"

    @property
    def build_deps(self):
        return [Anod.Dependency("artifacta")]

    def artifact_build(self):
        touch(os.path.join(self['INSTALL_DIR'], "artifact_b_1"))
        touch(os.path.join(self['INSTALL_DIR'], "artifact_b_2"))
